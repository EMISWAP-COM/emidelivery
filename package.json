    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "prettier-test": "npx prettier --write test --print-width 120 --tab-width 2",
    "prettier-scripts": "npx prettier --write scripts --print-width 120 --tab-width 2",
    "prettier-utils": "npx prettier --write utils --print-width 120 --tab-width 2",
    "prettier-sol": "prettier --write \"contracts/**/*.sol\" --print-width 120 --tab-width 4",
    "deploy-hardhat": "npx hardhat run scripts/deployWithMock.js --network hardhat",
    "upgrade-hardhat": "npx hardhat run scripts/upgrade.js --network hardhat",
    "deploy-mumbai": "npx hardhat run scripts/deployWithMock.js --network mumbai",
    "upgrade-mumbai": "npx hardhat run scripts/upgrade.js --network mumbai",
    "deploy-polygon": "npx hardhat run scripts/deployWithMock.js --network polygon",
    "upgrade-polygon": "npx hardhat run scripts/upgrade.js --network polygon",
    "contract-flatten": "npx hardhat flatten contracts/emidelivery.sol > flat/emidelivery.flat.sol"
  }
